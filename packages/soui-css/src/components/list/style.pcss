@import '../../theme/variables.pcss';

@define-mixin row {
  display: block;
  padding-left: 18px;
  background-color: #fff;
  text-decoration: none;
  .soui-list__container {
    display: flex;
    flex-flow: row wrap;
    box-sizing: border-box;
    width: 100%;
    padding: 8px 18px 8px 0;
    line-height: 32px;
    font-size: 16px;
    color: #333;
    border-bottom: 1px solid #eee;
  }
  &:last-child {
    .soui-list__container {
      border-bottom: none;
    }
  }
}

.soui-list {
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  .soui-list-item {
    @mixin row;
    padding: 0 0 0 18px;
    .soui-list__container {
      justify-content: space-between;
      border-bottom: 1px solid #eee;
      .soui-list__left {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        .soui-list__icon {
          padding-right: 12px;
        }
        .soui-list__thumbnail {
          width: 30px;
          height: 24px;
          padding-right: 12px;
          text-align: center;
          img {
            display: inline-block;
            max-width: 100%;
            max-height: 100%;
          }
        }
        .soui-list__content {
          min-height: 32px;
          display: flex;
          flex-direction: column;
          justify-content: space-around;
          align-items: flex-start;
          line-height: 16px;
          .soui-list__brief {
            font-size: 11px;
            color: #9b9b9b;
          }
        }
      }
      .soui-list__right {
        color: #999;
        font-size: 14px;
        line-height: 1.8em;
        padding: calc((32px - 14px * 1.8) / 2) 0;
        word-wrap: break-word;
        word-break: break-all;
        display: flex;
        align-items: center;
        .soui-list__extra {
          -webkit-user-select: text;
             -moz-user-select: text;
                  user-select: text;
        }
        .soui-list__icon {
          color: #d7d7d7;
          padding-left: 6px;
        }
        .soui-list__checked {
          display: block;
          color: $theme-color-primary;
          font-size: 22px;
        }
      }
    }
    &:last-child {
      .soui-list-item {
        border-bottom: none;
      }
    }
    &:active {
      background-color: #efefef;
    }
    &.soui-list--sub {
      .soui-list__container {
        font-size: 14px;
        color: #666;
        .soui-list__left {
          .soui-list__icon, .soui-list__thumbnail {
            padding-right: 18px;
          }
        }
      }
    }
  }
  .soui-list-title {
    @mixin row;
    padding: 0;
    .soui-list__container {
      padding: 8px 18px;
    }
  }
  .soui-list-button {
    @mixin row;
    padding: 0;
    .soui-list__container {
      padding: 8px 18px;
      justify-content: center;
      color: $theme-color-primary;
    }
    &:active {
      background-color: #efefef;
    }
  }
  .soui-list-group {
    @mixin row;
    & > .soui-list__container {
      display: block;
      padding: 8px 0;
    }
    .soui-list-item {
      padding: 0;
      .soui-list__container {
        padding: 0 18px 0 0;
      }
    }
  }
}
