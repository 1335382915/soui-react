@import '../../theme/variables.pcss';

@bem-namespace soui {
  @block tag {
    padding: 14px 0;
    text-align: center;
    font-size: 16px;
    line-height: 16px;
    color: #333;
    border: 1px solid #cecece;
    border-radius: 4px;
    transition: all 200ms ease;
    @modifier selected {
      border: 1px solid $theme-color-primary;
    }
    &:active {
      border: 1px solid #ddd;
    }
  }
}
