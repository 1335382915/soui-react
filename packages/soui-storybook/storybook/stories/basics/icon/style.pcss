@import '../../demo.pcss';

.view {
  .item {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    color: #444;
    margin: 18px;
    .name {
      width: 96px;
      min-height: 2em;
      text-align: center;
      font-size: 12px;
    }
  }

  .icon {
    font-size: 48px;
    padding: 24px;
    transition: all 200ms ease;
    &:hover {
      transform: scale(2);
    }
  }
}
